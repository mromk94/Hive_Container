{
  "manifest_version": 3,
  "name": "Hive Container - Connector",
  "version": "0.1.1",
  "version_name": "2025-10-31 gemini-v1+fallback",
  "description": "Carry your AI persona into web apps with explicit consent.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "notifications",
    "contextMenus",
    "identity"
  ],
  "host_permissions": [
    "http://localhost/*",
    "http://127.0.0.1/*",
    "https://localhost/*",
    "file://*/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.anthropic.com/*",
    "https://chatgpt.com/*",
    "https://*.openai.com/*",
    "https://claude.ai/*",
    "https://x.ai/*",
    "https://gemini.google.com/*",
    "https://*.google.com/*",
    "https://deepseek.com/*",
    "https://*.deepseek.com/*",
    "https://copilot.microsoft.com/*",
    "https://*.bing.com/*",
    "https://grok.com/*",
    "https://elevenlabs.io/*",
    "https://*.elevenlabs.io/*",
    "https://www.canva.com/*",
    "https://*.canva.com/*",
    "https://meta.ai/*",
    "https://www.meta.ai/*",
    "https://github.com/*",
    "https://*.github.com/*",
    "https://new-frontend-irt9943l2-adolphuslarrygmailcoms-projects.vercel.app/*"
  ],
  "optional_host_permissions": [
    "https://chatgpt.com/*",
    "https://*.openai.com/*",
    "https://claude.ai/*",
    "https://x.ai/*",
    "https://gemini.google.com/*",
    "https://*.google.com/*",
    "https://deepseek.com/*",
    "https://*.deepseek.com/*",
    "https://*/*",
    "http://*/*"
  ],
  "background": { "service_worker": "dist/background.js" },
  "action": { "default_popup": "dist/popup.html", "default_title": "Hive Container" },
  "content_scripts": [
    {
      "matches": [
        "http://localhost/*",
        "http://127.0.0.1/*",
        "https://localhost/*",
        "file://*/*",
        "https://chatgpt.com/*",
        "https://*.openai.com/*",
        "https://claude.ai/*",
        "https://x.ai/*",
        "https://gemini.google.com/*",
        "https://*.google.com/*",
        "https://deepseek.com/*",
        "https://*.deepseek.com/*",
        "https://copilot.microsoft.com/*",
        "https://*.bing.com/*",
        "https://grok.com/*",
        "https://elevenlabs.io/*",
        "https://*.elevenlabs.io/*",
        "https://www.canva.com/*",
        "https://*.canva.com/*",
        "https://meta.ai/*",
        "https://www.meta.ai/*",
        "https://github.com/*",
        "https://*.github.com/*",
        "https://new-frontend-irt9943l2-adolphuslarrygmailcoms-projects.vercel.app/*"
      ],
      "js": ["dist/contentScript.js"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true
    }
  ],
  "web_accessible_resources": [
    { "resources": ["dist/popup.html"], "matches": ["<all_urls>"] }
  ]
}
